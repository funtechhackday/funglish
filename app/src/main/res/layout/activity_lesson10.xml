<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/purplish"
    tools:context="com.example.adeogo.funglish.Lesson10Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comparing and Contrasting"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/text_color1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#00ffffff">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="READ"
            android:id="@+id/read_10"
            android:textSize="50sp"
            android:textColor="@color/text_color1"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#00ffffff">


            <TextView
                android:textColor="@color/text_color1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="First\ntest"
                android:textSize="30sp"
                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#00ffffff">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Second\ntest"
                android:textColor="@color/text_color1"
                android:textSize="30sp"
                app:cardBackgroundColor="#00ffffff"
                android:id="@+id/second_test_10"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
